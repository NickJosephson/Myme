<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitrogen.myme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mime"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mime_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".presentation.ExploreActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.DisplayMemeActivity"
            android:label= "@string/title_activity_display_meme">
        </activity>
        <activity
            android:name=".presentation.FavouritesActivity"
            android:label="@string/title_activity_favourite_meme">
        </activity>
        <activity
            android:name=".presentation.CreateActivity"
            android:label="@string/title_activity_create_meme">
        </activity>
        <activity
            android:name=".presentation.SaveMemeActivity"
            android:label="@string/title_activity_save_meme">
        </activity>
        <activity
            android:name=".presentation.SelectTemplateActivity"
            android:label="@string/title_activity_templates">
        </activity>
    </application>

</manifest>
